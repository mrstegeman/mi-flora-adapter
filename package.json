{
  "name": "mi-flora-adapter",
  "display_name": "Mi Flora",
  "version": "0.2.4",
  "description": "Connect your Mi Flora devices",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/mi-flora-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/mi-flora-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/mi-flora-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "mi-flora-adapter.js",
    "manifest.json"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "pollInterval": 30
    },
    "schema": {
      "type": "object",
      "required": [
        "pollInterval"
      ],
      "properties": {
        "pollInterval": {
          "type": "integer",
          "title": "The number of minutes between two read requests (should be as high as possible to save battery)"
        }
      }
    }
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-3"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.4.0"
  }
}
